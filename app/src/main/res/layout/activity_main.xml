<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/cakemall" />


        <EditText
            android:id="@+id/editText"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="38dp"
            android:hint="Name here "
            android:textColor="#ed2553"
            android:textSize="30sp"
            android:maxLines="1"/>

        <EditText
            android:id="@+id/alias"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText"
            android:layout_alignStart="@+id/editText"
            android:layout_centerVertical="true"
            android:hint="Nickname(alias) "
            android:textColor="#673AB7"
            android:textSize="30sp"
            android:maxLines="1"/>


        <TextView
            android:fontFamily="sans-serif-condensed"
            android:text="Hi Special Friend (:)"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="#FBE9E7"
            android:textColor="#880E4F"
            android:textSize = "32sp"
            android:gravity="center"
            android:textStyle="bold"


            android:id="@+id/textView" />

        <!--<Button-->
            <!--android:id="@+id/upload"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:onClick="uploadImage"-->
            <!--android:layout_alignLeft="@+id/alias"-->
            <!--android:layout_alignStart="@+id/alias"-->
            <!--android:layout_below="@+id/alias"-->
            <!--android:layout_marginTop="21dp"-->
            <!--android:text="Upload our image"-->
            <!--android:textSize="16dp"/>-->


        <Button
            android:id="@+id/mybutton"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_above="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:background="#ffff"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:onClick="sendMessage"
            android:text="Next"
            android:textColor="#ed2553"
            android:textSize="22sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="65dp"

            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="#ECEFF1"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="Ishtdeep Singh Hora"
            android:textColor="#263238"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Creator"
            android:textColor="#ed2553"
            android:textSize="16sp"
            android:id="@+id/textView4" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/mybutton"
            android:src="@drawable/fore" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_alignLeft="@+id/alias"
            android:layout_alignStart="@+id/alias"
            android:layout_below="@+id/alias"
            android:layout_marginTop="38dp"
            android:onClick="browseFiles"
            android:text="Upload "
            android:id="@+id/button2"
            android:background="@android:color/white"

            />

        <TextView
            android:id="@+id/success"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:layout_alignTop="@+id/button2"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/button2"
            android:layout_toRightOf="@+id/button2"

            android:textColor="@android:color/holo_red_dark" />

        <ImageView
            android:id="@+id/viewer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2"
            android:layout_below="@+id/button2"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp" />



    </RelativeLayout>



</LinearLayout>